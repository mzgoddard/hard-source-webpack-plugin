{
  "private": true,
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "commitlint-travis": "commitlint-travis",
    "standard-version": "yarn --cwd packages/hard-source-webpack-plugin standard-version",
    "release": "yarn --cwd packages/hard-source-webpack-plugin release",

    "lint": "yarn lint:hard-source-webpack-plugin && yarn lint:test-third-party && yarn lint:test-webpack && yarn lint:test-webpack-contrib && yarn lint:test-third-party",
    "lint:fix": "yarn lint:fix:hard-source-webpack-plugin && yarn lint:fix:test-third-party && yarn lint:fix:test-webpack && yarn lint:fix:test-webpack-contrib && yarn lint:fix:test-third-party",
    "test": "NODE_ENV=test yarn run test_",
    "test_": "yarn test:hard-source-webpack-plugin && yarn test:test-third-party && yarn test:test-webpack && yarn test:test-webpack-contrib && yarn test:test-third-party",
    "lint:hard-source-webpack-plugin": "yarn --cwd packages/hard-source-webpack-plugin lint",
    "lint:fix:hard-source-webpack-plugin": "yarn --cwd packages/hard-source-webpack-plugin lint:fix",
    "test:hard-source-webpack-plugin": "yarn --cwd packages/hard-source-webpack-plugin test",
    "lint:tap-hard-source": "yarn --cwd workspaces/tap-webpack-plugin lint",
    "lint:fix:tap-hard-source": "yarn --cwd workspaces/tap-hard-source lint:fix",
    "test:tap-hard-source": "yarn --cwd workspaces/tap-hard-source test",
    "lint:test-webpack": "yarn --cwd workspaces/test-webpack lint",
    "lint:fix:test-webpack": "yarn --cwd workspaces/test-webpack lint:fix",
    "test:test-webpack": "yarn --cwd workspaces/test-webpack test",
    "lint:test-webpack-contrib": "yarn --cwd workspaces/test-webpack-contrib lint",
    "lint:fix:test-webpack-contrib": "yarn --cwd workspaces/test-webpack-contrib lint:fix",
    "test:test-webpack-contrib": "yarn --cwd workspaces/test-webpack-contrib test",
    "lint:test-third-party": "yarn --cwd workspaces/test-third-party lint",
    "lint:fix:test-third-party": "yarn --cwd workspaces/test-third-party lint:fix",
    "test:test-third-party": "yarn --cwd workspaces/test-third-party test",

    "test:appveyor:hard-source-webpack-plugin": "cd packages/hard-source-webpack-plugin/tests && mocha *.js"
  },
  "workspaces": [
    "packages/*",
    "workspaces/test-third-party/*",
    "workspaces/test-third-party",
    "workspaces/test-webpack-contrib/*",
    "workspaces/test-webpack-contrib",
    "workspaces/mocha-hard-source",
    "workspaces/test-webpack"
  ],
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/travis-cli": "^6.2.0",
    "husky": "^0.14.3",
    "standard-version": "^4.4.0",
    "prettier": "^1.12.1"
  }
}
